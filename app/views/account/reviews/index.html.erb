<div class="col-md-12">
<h2 class="text-center"> 我發表過的評論 </h2>
<table class="table">
    <thead>
    <tr>
        <th> 評論內容 </th>
        <th> 電影名稱 </th>
        <th> 最後更新時間 </th>
        <th colspan="2"></th>
    </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
        <tr>
        <td> <%= render_reviews_content(post) %> </td>
        <td> <%= post.moviegroup.title %> </td>
        <td> <%= post.updated_at %> </td>
        <td> <%= link_to('修改評論', edit_moviegroup_review_path(post.moviegroup, post), class: "btn btn-default btn-xs") %></td>
        <td> <%= link_to('刪除', moviegroup_review_path(post.moviegroup, post), method: :delete, data: { confirm: "確定刪除此文章嗎?" }, class: "btn btn-default btn-xs") %></td>
        </tr>
    <% end %>
    </tbody>
</table>
<%= link_to "回首頁", moviegroups_path,  class: "btn btn-primary pull-right" %>
</div>